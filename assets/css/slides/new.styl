.page-title
  text-align center
  margin 30px 0

.form-page
  .control-group
    margin-bottom 10px

  .control-group.horizontal

    .control-label
      float left
      padding-top 5px
      margin-right 10px

    .controls
      display inline-block
      margin-bottom 0
      vertical-align middle

  .control-group.form-actions
    margin 5px 0
    padding 10px 5px

    .controls
      float right

    .btn
      margin 0 5px

      &:first
        margin 0 5px 0 0

       &:last
        margin 0 0 0 5px


