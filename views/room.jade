extends layout

block stylesheets
  link(href='/live-hall/room/room.css', rel='stylesheet')

block page
  .navbar-wrapper
    // Wrap the .navbar in .container to center it within the absolutely positioned parent.
    .container
      .navbar.navbar-inverse
        .navbar-inner
          button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') Live Hall

          .nav-collapse.collapse
            ul.nav
              li
                a(href="/room/#{roomId}") Room
              li
                a(href='/room/public') Public Rooms
              li

              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Contact
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='http://github.com/timnew') Github
                  li
                    a(href='https://twitter.com/timnew') Twitter
                  li
                    a(href='mailto:timnew.wti@gmail.com') Email

  .container.marketing
    ul
      li
        a(href=viewUrl, target='_blank') View
          div(data-qrcode=viewUrl)
      li
        a(href=controlUrl, target='_blank') Control
          div(data-qrcode=controlUrl)
      li
        != clientCount
        | Clients

    footer
      p
        | © 2013 TimNew ·
        a(href='http://github.com/timnew') Github
        |  ·
        a(href='http://twitter.com/timnew') Twitter

block body-scripts
  script(src='/live-hall/jquery.qrcode.min.js')
  script
    !function ($) {
      $(function () {
        $('[data-qrcode]').each(function(){
          $this = $(this)
          $this.qrcode($this.data('qrcode'));
        });
      });
    }(window.jQuery);
