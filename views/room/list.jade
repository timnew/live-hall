extends ../page

block stylesheets
  != assets.css('sprites')

block navbar
  .container
    .navbar.navbar-inverse
      .navbar-inner
        button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href='/') Live Hall

        .nav-collapse.collapse
          ul.nav
            li
              a(href="/room/") Room
            li
              a(href='/room/public') Public Rooms
            li

            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Contact
                b.caret
              ul.dropdown-menu
                li
                  a(href='http://github.com/timnew') Github
                li
                  a(href='https://twitter.com/timnew') Twitter
                li
                  a(href='mailto:timnew.wti@gmail.com') Email

block page-content
  .container
    .row
      .span12
        h1(style="text-align:center;")= title
    .row
      .span8.offset2
        ul.media-list
          each room in rooms
            li.media
              i.pull-left.media-object.icon-ex-presentation.icon-large
              .media-body
                a(href="/room/#{room.id}")
                  h4.media-heading= room.name
                = room.description


