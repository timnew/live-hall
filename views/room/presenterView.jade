.sideshow-header
   button.close(data-dismiss="sideshow") &times;
   h3 Presenter View
.sideshow-body
  form.form-horizontal
    .control-group
      label.control-label(for='roomName') Room Name
      .controls
        input#roomName.input-xlarge(name="roomName", type='text', placeholder='Room Name')

    .control-group
      label.control-label(for='roomDescription') Room Description
      .controls
        input#inputPassword.input-xlarge(name="roomDescription", type='text', placeholder='Room Description')

    .control-group
      label.control-label(for='roomSecret') Presenter View Secret
      .controls
        #roomSecret.img-rounded.img-polaroid.input-xlarge(data-widget="QRCode", data-qrcode="xxxxxx")
        span.help-block Capture this QRCode with Google Authenticator

.sideshow-footer
  button.btn(data-dismiss="sideshow") Close
