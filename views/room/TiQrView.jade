div(data-widget="@TiQrView")
  != assets.css('qrcode')
  != assets.css('tiqr')

  .sideshow-header
    button.close(data-dismiss="sideshow") &times;
    h3
      block title

  .sideshow-body
    .jumbotron
      .alert.alert-error
        h4 EXPERIMENTAL FEATURE
        | TiQr Authentication is experimental feature, no warranty is provided

      block instruction

      p
        .qrcode.qrcode-large.img-rounded.img-polaroid(data-widget="QRCode", data-qrcode=actionUrl)

      block footnote

  .sideshow-footer
    button.btn(data-action-handler="back") Back
